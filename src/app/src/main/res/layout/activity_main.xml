<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_main"
                android:layout_width="match_parent"
                android:layout_height="400dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/grey_100"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/newproducts_view_items"
                style="@style/CategoryCardStyle"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                app:cardBackgroundColor="@color/grey_100"
                app:cardCornerRadius="69dp">

                <ImageView
                    android:id="@+id/newproducts_image_view"
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:src="@drawable/newproducts3" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/deals_view_items"
                style="@style/CategoryCardStyle"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                app:cardBackgroundColor="@color/grey_100"
                app:cardCornerRadius="69dp">

                <ImageView
                    android:id="@+id/deals_image_view"
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/deals3" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bestselling_view_items"
                style="@style/CategoryCardStyle"
                android:layout_width="138dp"
                android:layout_height="140dp"
                android:backgroundTint="@android:color/transparent"
                app:cardBackgroundColor="@color/grey_100"
                app:cardCornerRadius="69dp">

                <ImageView
                    android:id="@+id/bestselling_image_view"
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/all_items3" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/grey_100"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingBottom="0dp"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/apple_view_items"
                style="@style/CategoryCardStyle"
                android:layout_width="131dp"
                android:layout_height="140dp"
                android:backgroundTint="@android:color/transparent"
                app:cardBackgroundColor="@color/grey_100"
                android:paddingTop="550dp"
                app:cardCornerRadius="70dp">

                <ImageView
                    android:id="@+id/apple_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"

                    android:layout_gravity="left"

                    android:src="@drawable/apple3" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/samsung_view_items"
                style="@style/CategoryCardStyle"
                android:layout_width="131dp"
                android:layout_height="140dp"
                android:backgroundTint="@android:color/transparent"
                app:cardBackgroundColor="@color/grey_100"
                app:cardCornerRadius="70dp">

                <ImageView
                    android:id="@+id/samsung_image_view"
                    android:layout_width="129dp"
                    android:layout_height="151dp"
                    android:layout_gravity="center"

                    android:src="@drawable/samsung_logo3" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/microsoft_view_items"
                style="@style/CategoryCardStyle"
                android:layout_width="132dp"
                android:layout_height="140dp"
                android:backgroundTint="@android:color/transparent"
                app:cardBackgroundColor="@color/grey_100"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/microsoft_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:layout_gravity="right"
                    android:src="@drawable/microsoft3" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>